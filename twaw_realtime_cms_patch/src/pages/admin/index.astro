---
import BaseLayout from "../../layouts/BaseLayout.astro";
import adminScript from "../../scripts/admin/app";

const title = "Admin";
---

<BaseLayout title={title}>
  <main class="twaw-admin-page">
    <div id="twaw-admin-root"></div>
  </main>

  <style>
    .twaw-admin-page{
      max-width: 1100px;
      margin: 0 auto;
      padding: 1rem;
    }
    .twaw-admin{
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    .twaw-admin-header{
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 1rem;
    }
    .twaw-admin-title{
      font-size: 1.25rem;
      font-weight: 700;
      margin: 0;
    }
    .twaw-admin-muted{
      opacity: 0.7;
      margin: 0.25rem 0 0;
      font-size: 0.95rem;
    }
    .twaw-admin-actions{
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
    }
    .twaw-admin-grid{
      display: grid;
      grid-template-columns: 320px 1fr;
      gap: 1rem;
      align-items: start;
    }
    @media (max-width: 900px){
      .twaw-admin-grid{ grid-template-columns: 1fr; }
    }
    .twaw-admin-card{
      border: 1px solid rgba(0,0,0,.12);
      border-radius: 12px;
      padding: 1rem;
      max-width: 420px;
    }
    .twaw-admin-list{
      border: 1px solid rgba(0,0,0,.12);
      border-radius: 12px;
      padding: 0.75rem;
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
      position: sticky;
      top: 1rem;
    }
    .twaw-admin-list input{
      width: 100%;
      padding: 0.5rem 0.6rem;
      border: 1px solid rgba(0,0,0,.16);
      border-radius: 10px;
    }
    .twaw-admin-post{
      width: 100%;
      text-align: left;
      border: 1px solid rgba(0,0,0,.12);
      border-radius: 12px;
      padding: 0.6rem;
      background: transparent;
      cursor: pointer;
    }
    .twaw-admin-post__title{
      font-weight: 700;
    }
    .twaw-admin-post__meta{
      opacity: 0.7;
      font-size: 0.85rem;
      margin-top: 0.25rem;
      word-break: break-word;
    }
    .twaw-admin-editor{
      border: 1px solid rgba(0,0,0,.12);
      border-radius: 12px;
      padding: 0.75rem;
    }
    .twaw-admin-form{
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }
    .twaw-admin-form label{ display: flex; flex-direction: column; gap: 0.35rem; }
    .twaw-admin-form input, .twaw-admin-form textarea{
      padding: 0.55rem 0.65rem;
      border: 1px solid rgba(0,0,0,.16);
      border-radius: 10px;
      width: 100%;
    }
    .twaw-admin-row{ display: block; }
    .twaw-admin-row-2{ display: grid; grid-template-columns: 1fr 1fr; gap: 0.75rem; }
    @media (max-width: 700px){
      .twaw-admin-row-2{ grid-template-columns: 1fr; }
    }
    .twaw-admin-check{ flex-direction: row !important; align-items: center; gap: 0.5rem !important; }
    .twaw-admin-status{ min-height: 1.25rem; margin: 0; }
    .twaw-admin-preview img{ max-width: 100%; border-radius: 12px; border: 1px solid rgba(0,0,0,.12); }
    button{
      padding: 0.55rem 0.8rem;
      border-radius: 10px;
      border: 1px solid rgba(0,0,0,.16);
      cursor: pointer;
    }
    .twaw-admin-danger{ border-color: rgba(255,0,0,.35); }
  </style>

  <script type="module" src={adminScript}></script>
</BaseLayout>
