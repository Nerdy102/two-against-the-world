---
type Props = {
  slug: string;
  label: string;
  icon: string;
  color: string;
  count?: number;
  href?: string;
};

const { slug, label, icon, color, count = 0, href = `/topics/${slug}` } = Astro.props as Props;
---

<a class="topic-card" href={href} style={`--topic-color:${color};`} data-reveal>
  <div class="topic-card__icon">{icon}</div>
  <div class="topic-card__body">
    <div class="topic-card__label">{label}</div>
    <div class="topic-card__count">{count} b√†i</div>
  </div>
</a>
