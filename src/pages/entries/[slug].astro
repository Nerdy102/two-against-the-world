    .prepare(
      `SELECT *
       FROM posts
       WHERE slug = ? AND status = 'published'
       LIMIT 1`
    )
    .bind(slug)
    .first<PostRecord>();
  post = await getHybridPostBySlug(post, slug);
} catch (err) {
  console.warn("Using content post fallback:", err);
  post = await getHybridPostBySlug(null, slug);
}
