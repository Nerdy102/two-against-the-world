---
import BaseLayout from "../layouts/BaseLayout.astro";
import RansomTitle from "../components/RansomTitle.astro";
---

<BaseLayout title="Giới thiệu — Two Against The World" active="about" description="Vài dòng về scrapbook">
  <section class="paper edge-torn px-6 py-7 sm:px-8 sm:py-8" data-reveal>
    <p class="kicker text-[11px] text-black/50">Thông tin</p>
    <div class="mt-2">
      <RansomTitle text="Giới thiệu" as="h1" stampEvery={0} class="text-[44px] sm:text-[56px]" />
    </div>

    <div class="prose prose-scrap mt-6 max-w-none">
      <p>
        Tao thích đấy được không?
      </p>

      <p>
        Nhìn 10k
      </p>
    </div>
  </section>
</BaseLayout>
