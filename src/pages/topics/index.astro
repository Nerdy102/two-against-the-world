---
import BaseLayout from "../../layouts/BaseLayout.astro";
import RansomTitle from "../../components/RansomTitle.astro";
import TopicCard from "../../components/TopicCard.astro";
import { TOPICS } from "../../config/topics";
import { getCollection } from "astro:content";

const posts = (await getCollection("posts"))
  .filter((p) => !p.data.draft)
  .sort((a, b) => +new Date(b.data.pubDate) - +new Date(a.data.pubDate));

const counts: Record<string, number> = {};
for (const p of posts) {
  const t = p.data.topic ?? "two-of-us";
  counts[t] = (counts[t] ?? 0) + 1;
}
---

<BaseLayout title="Topics" active="topics">
  <main class="mx-auto max-w-6xl px-5 pb-20">
    <section class="paper edge-torn mt-8 p-6 sm:p-10" data-reveal>
      <p class="kicker text-[11px] text-black/50">Collections</p>
      <RansomTitle text="TOPICS" as="h1" stampEvery={0} class="text-[44px] sm:text-[60px]" />
      <p class="mt-3 text-black/70">
        Xem thì xem, đừng đọc quá kỹ, đừng dig too deep nhé, tao ngại đấy, xin đấy !!!!!!!!!!!!!!!!!!!!!
      </p>

      <div class="topic-grid">
        {TOPICS.map((t) => (
          <TopicCard slug={t.slug} label={t.label} icon={t.icon} color={t.color} count={counts[t.slug] ?? 0} />
        ))}
      </div>

      <div class="mt-6">
        <a class="btn" href="/entries">Thích xem thêm cmg thì bấm vào đây</a>
      </div>
    </section>
  </main>
</BaseLayout>
