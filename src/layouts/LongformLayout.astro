---
import BaseLayout from "./BaseLayout.astro";

const {
  title = "Bài dài — Two Against The World",
  description = "Bố cục dài dạng landing page.",
  active = "entries",
} = Astro.props as {
  title?: string;
  description?: string;
  active?: "entries" | "topics" | "about";
};
---

<BaseLayout title={title} description={description} active={active}>
  <main class="mx-auto max-w-5xl px-5 pb-24 pt-10">
    <div class="longform">
      <slot name="hero" />
      <slot />
    </div>
  </main>
</BaseLayout>
